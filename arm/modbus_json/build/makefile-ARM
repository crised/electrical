
LIBDIR=-L$(CURDIR)/../deps/libs -L$(ARM_TOOLCHAIN_PATH)/usr/lib
INCLUDES=$(CURDIR)/../deps/include
CC=$(ARM_TOOLCHAIN_PATH)/bin/arm-linux-gcc

RM := rm -rf

# All of the sources participating in the build are defined here
-include sources.mk
-include src/subdir.mk
-include subdir.mk
-include objects.mk

ifneq ($(MAKECMDGOALS),clean)
ifneq ($(strip $(C_DEPS)),)
-include $(C_DEPS)
endif
endif


all: $(OBJS) $(USER_OBJS)
	@echo 'Building target: $@'
	@echo 'Invoking: Cross GCC Linker'
	$(CC) $(LIBDIR) -o "modbus_json" $(OBJS) $(USER_OBJS) $(LIBS)
	@echo 'Finished building target: $@'
	@echo ' '

# Other Targets
clean:
	-$(RM) $(OBJS)$(C_DEPS)$(EXECUTABLES) modbus_json
	-@echo ' '

.PHONY: all clean dependents
.SECONDARY:

